@model MusicCenter.Common.ViewModels.Band.BandSingleViewModel

@Scripts.Render("~/Scripts/Band/UpdateSingle.js")
@Scripts.Render("~/Scripts/jquery-ui-1.11.4.js")
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.0/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />

@Html.Action("RenderBandLayout", "Band", new { BandName = @Model.BandName })

<div id="BodyContent" style="margin-left: 50px; margin-top: 10px">
    <form action="@Url.Action("UpdateSingle", "Band")" method="post">
        @Html.HiddenFor(m => m.Id)
        <div class="col-sm-12">
            <div class="row form-group">
                <iframe width="100%" height="20" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/@Model.UrlAddress&amp;color=ff5500&amp;inverse=false&amp;auto_play=false&amp;show_user=false"></iframe>
            </div>
            <div class="row form-group">
                <div class="col-sm-1">
                    @MusicCenter.Common.Resources.Global.Genres:
                </div>
                <div class="col-sm-11">
                    @Html.TextBoxFor(m => m.Genres, new { @class = "form-control" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    @MusicCenter.Common.Resources.Global.ReleaseDate:
                </div>
                <div class="col-sm-2" style="left: -90px" >
                    @Html.TextBoxFor(m => m.ReleaseDate, "{0:d}", new { @class = "form-control", @id = "ReleaseDate" })
                </div>
            </div>
        </div>
        <input type="submit" value="@MusicCenter.Common.Resources.Global.Save" class="btn btn-default pull-right" />
    </form>
</div>