@model MusicCenter.Common.ViewModels.Message.NewMessageViewModel

@{
    Html.RenderAction("RenderBandLayout", "Band", new { BandName = Session["band"].ToString() });
}
<div id="BodyContent" style="margin-left: 50px">

    <ul class="nav nav-tabs" style="margin-bottom:10px">
        <li role="presentation"><a href="@Url.Action("BandMessages", "Message")">@MusicCenter.Common.Resources.Global.Received</a></li>
        <li role="presentation"><a href="@Url.Action("BandSentMessages", "Message")">@MusicCenter.Common.Resources.Global.Sent</a></li>
        <li role="presentation" class="active"><a href="@Url.Action("BandNewMessage", "Message")">@MusicCenter.Common.Resources.Global.NewMessage</a></li>
    </ul>

    <form action="@Url.Action("BandNewMessage", "Message")" method="post" class="">
        <div class="form-group">
            <label>@MusicCenter.Common.Resources.Global.Recipients</label>
            @Html.TextBoxFor(m => m.Recipients, new { @class = "form-control", @placeholder = @MusicCenter.Common.Resources.Global.SeparatedByComma })
            @Html.ValidationMessageFor(m => m.Recipients)
            <div class="has-error"><div class="control-label">@Model.RecipientsErrorMsg</div></div>
        </div>
        <div class="form-group">
            <label>@MusicCenter.Common.Resources.Global.Title</label>
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Title)
        </div>
        <div class="form-group">
            <label>@MusicCenter.Common.Resources.Global.Message</label>
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = "4" })
        </div>
        <div class="form-group">
            <input type="submit" value="@MusicCenter.Common.Resources.Global.Send" class="btn btn-default" />
        </div>
    </form>
</div>
