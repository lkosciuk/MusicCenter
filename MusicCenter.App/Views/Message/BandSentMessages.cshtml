@model List<MusicCenter.Common.ViewModels.Message.MessageLisItemViewModel>

@{
    Html.RenderAction("RenderBandLayout", "Band", new { BandName = Session["band"].ToString() });
}
<div id="BodyContent" style="margin-left: 50px">


    <ul class="nav nav-tabs" style="margin-bottom:10px">
        <li role="presentation"><a href="@Url.Action("BandMessages", "Message")">@MusicCenter.Common.Resources.Global.Received</a></li>
        <li role="presentation" class="active"><a href="@Url.Action("BandSentMessages", "Message")">@MusicCenter.Common.Resources.Global.Sent</a></li>
        <li role="presentation"><a href="@Url.Action("BandNewMessage", "Message")">@MusicCenter.Common.Resources.Global.NewMessage</a></li>
    </ul>
    <div class="row">
        <div class="col-md-2">
            @MusicCenter.Common.Resources.Global.Author
        </div>
        <div class="col-md-2">
            @MusicCenter.Common.Resources.Global.Date
        </div>
        <div class="col-md-2">
            @MusicCenter.Common.Resources.Global.Title
        </div>
        <div class="col-md-2">
            @MusicCenter.Common.Resources.Global.Recipients
        </div>
        <div class="col-md-2">
            @MusicCenter.Common.Resources.Global.Readed
        </div>
    </div>

    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            if (!item.IsReaded)
            {
                <div class="row" style="background:lightblue">
                    <div class="col-md-2">
                        @item.Author
                    </div>
                    <div class="col-md-2">
                        @item.SentDate
                    </div>
                    <div class="col-md-2">
                        @item.Title
                    </div>
                    <div class="col-md-2">
                        @item.Recipients
                    </div>
                    <div class="col-md-1">
                        @if (item.IsReaded)
                        {<label>@MusicCenter.Common.Resources.Global.Yes</label>}
                        else
                        {<label>@MusicCenter.Common.Resources.Global.No</label>}
                    </div>
                    <div class="col-md-1">
                        <a class="btn btn-default pull-right" href="@Url.Action("BandMessageDetails", "Message", new { MessageId = @item.Id })" role="button">@MusicCenter.Common.Resources.Global.Details</a>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-2">
                        @item.Author
                    </div>
                    <div class="col-md-2">
                        @item.SentDate
                    </div>
                    <div class="col-md-2">
                        @item.Title
                    </div>
                    <div class="col-md-2">
                        @item.Recipients
                    </div>
                    <div class="col-md-1">
                        @if (item.IsReaded)
                        {<label>@MusicCenter.Common.Resources.Global.Yes</label>}
                        else
                        {<label>@MusicCenter.Common.Resources.Global.No</label>}
                    </div>
                    <div class="col-md-1">
                        <a class="btn btn-default pull-right" href="@Url.Action("BandMessageDetails", "Message", new { MessageId = @item.Id })" role="button">@MusicCenter.Common.Resources.Global.Details</a>
                    </div>
                </div>
            }

        }
    }
    else
    {
        <h1><small>No messages...</small></h1>
    }
</div>