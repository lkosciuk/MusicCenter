@model MusicCenter.Common.ViewModels.Message.MessageDetailsViewModel

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<ul class="nav nav-tabs" style="margin-bottom:10px">
    <li role="presentation"><a href="@Url.Action("UserMessages", "Message")">@MusicCenter.Common.Resources.Global.Received</a></li>
    <li role="presentation"><a href="@Url.Action("UserSentMessages", "Message")">@MusicCenter.Common.Resources.Global.Sent</a></li>
    <li role="presentation" class="active"><a href="@Url.Action("UserNewMessage", "Message")">@MusicCenter.Common.Resources.Global.NewMessage</a></li>
</ul>

    <div class="form-group">
        <label>@MusicCenter.Common.Resources.Global.Author</label>
        @Html.TextBoxFor(m => m.Author, new { @class = "form-control", disabled="disabled", @placeholder = "separated by comma" })
    </div>
    <div class="form-group">
        <label>@MusicCenter.Common.Resources.Global.Title</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", disabled = "disabled" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div class="form-group">
        <label>@MusicCenter.Common.Resources.Global.Message</label>
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", disabled="disabled", @rows = "4" })
    </div>
    <div class="form-group">
        <a class="btn btn-default" href="@Url.Action("UserNewMessage", "Message", new { MessageId = @Model.Id })" role="button">@MusicCenter.Common.Resources.Global.Reply</a>
    </div>

    



