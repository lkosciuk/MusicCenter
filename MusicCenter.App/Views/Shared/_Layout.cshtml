<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryValidation")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav col-lg-4" style="height: 25px">
                    <li class="navbar-header">
                        @Html.ActionLink(Resources.Global.AppName, "Index", "Home", null, new { @class = "navbar-brand" })
                    </li>
                    <li>
                        @Html.ActionLink(Resources.Global.ChangeLanguagePl, "SetCulture", "Home", new { @culture = "pl" }, null)
                    </li>
                    <li>
                        @Html.ActionLink(Resources.Global.ChangeLanguageEn, "SetCulture", "Home", new { @culture = "en" }, null)
                    </li>
                </ul>
                @Html.Partial("_LoginPanel")
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Resources.Global.Bands, "BandList", "Band")</li>
                    <li>@Html.ActionLink(Resources.Global.Albums, "AlbumList", "Music")</li>
                    <li>@Html.ActionLink(Resources.Global.Songs, "SongList", "Music")</li>
                    <li>@Html.ActionLink(Resources.Global.Concerts, "ConcertList", "Band")</li>
                </ul>
                @Html.Partial("_SearchPanel")
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        <br/>
        <br/>
        <br/>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>
