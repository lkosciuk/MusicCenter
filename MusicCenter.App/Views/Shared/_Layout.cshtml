<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryValidation")
    @Scripts.Render("~/bundles/unobtrusive")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Layout/LoginPanel.js")
    @Scripts.Render("~/Scripts/Layout/UserPanel.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")

    @RenderSection("scripts", required: false)
    <script src="https://connect.soundcloud.com/sdk/sdk-3.1.2.js"></script>
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="height: 25px">
                    <li class="navbar-header">
                        @Html.ActionLink(MusicCenter.Common.Resources.Global.AppName, "Index", "Home", null, new { @class = "navbar-brand" })
                    </li>
                    <li>
                        @Html.ActionLink(MusicCenter.Common.Resources.Global.ChangeLanguagePl, "SetCulture", "Home", new { @culture = "pl" }, null)
                    </li>
                    <li>
                        @Html.ActionLink(MusicCenter.Common.Resources.Global.ChangeLanguageEn, "SetCulture", "Home", new { @culture = "en" }, null)
                    </li>
                </ul>
                    @if (Session["user"] != null || Session["band"] != null)
                    {
                        if (Session["band"] != null)
                        {
                            @Html.Action("GetBandPanel", "Band")
                        }
                        else
                        {
                            @Html.Action("GetUserPanel", "User")
                        }

                    }
                    else
                    {
                        @Html.Action("GetLoginPanel", "Account")
                    }
                <br />
                <br />
                <br/>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(MusicCenter.Common.Resources.Global.Bands, "BandList", "Band")</li>
                    <li>@Html.ActionLink(MusicCenter.Common.Resources.Global.Albums, "AlbumList", "Band")</li>
                    <li>@Html.ActionLink(MusicCenter.Common.Resources.Global.Songs, "SongList", "Band")</li>
                    <li>@Html.ActionLink(MusicCenter.Common.Resources.Global.Concerts, "ConcertList", "Concert")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_SearchPanel")
                </ul>                
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        <br/>
        <br/>
        <br/>
        @RenderBody()
        <hr />
    </div>
</body>
</html>
