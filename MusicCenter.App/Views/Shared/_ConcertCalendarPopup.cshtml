@model List<MusicCenter.Common.ViewModels.Concert.ConcertViewModel>

@{
    var lastConcert = Model.Last();
    
    foreach (var concert in Model)
    {
    
        <a href="@Url.Action("Concert", "Concert", new { ConcertId = concert.ConcertId, BandName = concert.BandName })" style="text-decoration:none">
            <div class="row">
                <div class="col-sm-3">
                    <img src="@concert.Image.PathToShow" alt="..." width="100" height="100" style="text-decoration:none">
                </div>
                <div class="col-sm-9">
                    <div class="row">
                        <div class="col-sm-2">
                            Bands:
                        </div>
                        <div class="col-sm-10">
                            @{
                                var lastBand = concert.Bands.Last();

                                foreach (var item in concert.Bands)
                                {
                                    if (item.Equals(lastBand))
	                                {
		                                <div style="display:inline">@item.BandName</div>
	                                }
                                    else
                                    {
                                        <div style="display:inline">@item.BandName , </div>
                                    }
                                }
		                                
	                        }                
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            Address:
                        </div>
                        <div class="col-sm-10">
                            @concert.address
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            Interested:
                        </div>
                        <div class="col-sm-10">
                            @concert.InterestedCount
                        </div>
                    </div>
                </div>
            </div>
        </a>
    
        if (!concert.Equals(lastConcert))
        {
            <hr />
        }    
    
    }
}
    