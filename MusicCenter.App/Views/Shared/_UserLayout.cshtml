@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/User/UserPage.css")

<div id="sidebar-wrapper">
    <ul class="sidebar-nav">
        <li class="sidebar-brand">
            <span style="color:white">@Session["user"].ToString()</span>
        </li>
        <li>
            <a href="#" id="UserProfile">@MusicCenter.Common.Resources.Global.Profile</a>
        </li>
        <li>
            <a href="@Url.Action("UserMessages", "Message")" id="UserMessages">@MusicCenter.Common.Resources.Global.Messages</a>
        </li>
        <li>
            <a href="@Url.Action("UserFavourites", "Favourites")" id="UserFavourites">@MusicCenter.Common.Resources.Global.Favourites</a>
        </li>
        <li>
            <a href="@Url.Action("UserBands", "Band")" id="UserBands">@MusicCenter.Common.Resources.Global.YourBands</a>
        </li>
    </ul>
</div>

<div style="position:relative; left: 50px">@RenderBody()</div>

<script>
    $(document).ready(function () {

        if (localStorage['scToken'] != null) {
            $("#UserProfile").attr("href", '@Url.Action("UserSoundcloudProfile", "User")')
        }
        else {
            $("#UserProfile").attr("href", '@Url.Action("UserProfile", "User")')
        }


    })
</script>