<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.0/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
        <li>
            <input type="text" style="max-width: 100%; width: 500px " class="form-control" id="searchInput" data-url="@Url.Action("Search", "Home")" placeholder="@MusicCenter.Common.Resources.Global.SearchPlaceHolder"/>
            <div id="menu-container" style="position:absolute; z-index: 999999"></div>
        </li>

<style>
       .ui-autocomplete {
           max-height: 500px;
           overflow-y: auto;
           /* prevent horizontal scrollbar */
           overflow-x: hidden;
           /* add padding to account for vertical scrollbar */
           padding-right: 20px;
       }
       /* IE 6 doesn't support max-height
    * we use height instead, but this forces the menu to always be this tall
    */
       * html .ui-autocomplete {
           height: 500px;
       }
</style>
<script type="text/javascript">

    $(document).ready(function () {
        $.ui.autocomplete.prototype._renderItem = function (ul, item) {

            var SearchItemDetails = "<input type='button' />";

            return $("<li>")
                    .append(item.label)
                    .appendTo(ul);
        };

        $.widget("custom.catcomplete", $.ui.autocomplete, {
            _renderMenu: function (ul, items) {
                var that = this,
                    currentCategory = "";
                $.each(items, function (index, item) {
                    if (item.category != currentCategory) {
                        ul.append("<li class='' style='pointer-events: none;font-weight: bold; padding: .2em .4em; margin: .8em 0 .2em;line-height: 1.5;'>" + item.category + "</li>");
                        currentCategory = item.category;
                    }
                    that._renderItemData(ul, item);
                });
            }
        });

        $("#searchInput").catcomplete({
            delay: 0,
            source: function (request, response) {
                jQuery.get($('#searchInput').data('url'), {
                    query: request.term
                }, function (data) {
                    response(data.Data);
                })
            },
            select: function (event, ui) {
                var label = ui.item.label;
                var value = ui.item.value;
                //akcja
            },
            appendTo: '#menu-container'
        });
    })
    
</script>         
