@model List<MusicCenter.Common.ViewModels.Band.BandsPanelViewModel>
</br>
<ul class="nav nav-tabs" style="margin-bottom:10px">
    <li role="presentation" class="active"><a href="#">@MusicCenter.Common.Resources.Global.NewBands</a></li>
</ul>

@if (Model != null)
{
    foreach (var band in Model)
    {
        <div class="col-sm-2 col-md-4">
            <a href="@Url.Action("BandProfile", "Band", new { BandName = band.BandName})" style="text-decoration: none;">
                <div class="thumbnail">
                    <img src="@band.AvatarPath" )" alt="...">
                    <div class="caption">
                        <h3>@band.BandName</h3>
                        <p>@band.Genres</p>
                        <p>@band.DescriptionPart</p>
                    </div>
                </div>
            </a>
        </div>
    }
}


