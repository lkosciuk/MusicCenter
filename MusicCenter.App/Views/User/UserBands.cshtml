@model List<MusicCenter.Common.ViewModels.Band.BandListItemViewModel>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="row">
    <div class="col-md-2">
        
    </div>
    <div class="col-md-2">
        @MusicCenter.Common.Resources.Global.Name
    </div>
    <div class="col-md-2">
        @MusicCenter.Common.Resources.Global.Genres
    </div>
    <div class="col-md-2">
        @MusicCenter.Common.Resources.Global.YearsActive
    </div>
    <div class="col-md-2">
        @MusicCenter.Common.Resources.Global.Description
    </div>
</div>

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <form>
            <div class="row">
                <div class="col-md-2">
                    <img src="@item.Avatar.PathToShow" class="img-circle" width="50" height="50" style="margin-left: 5px">
                </div>
                <div class="col-md-2">
                    @item.Name
                </div>
                <div class="col-md-2">
                    @foreach (var genre in item.Genres)
                    {
                        <label>@genre </label>
                    }
                </div>
                <div class="col-md-2">
                    @item.CreationDate - @if (item.ResolveDate != null)
                    { <label>@item.ResolveDate</label> }
                    else
                    { <label>Present</label> }
                </div>
                <div class="col-md-2">
                    @item.Description.Substring(0, 50) ...
                </div>
                <div class="col-md-2">
                    <input type="submit" class="btn btn-default pull-right" value="@MusicCenter.Common.Resources.Global.SignIn" />
                </div>
            </div>
        </form>
    }
}
else
{
    <h1><small>@MusicCenter.Common.Resources.Global.AddBandInfo</small></h1>
}

<a class="btn btn-default pull-right" href="@Url.Action("AddBand", "Band")" role="button">@MusicCenter.Common.Resources.Global.AddBand</a>



