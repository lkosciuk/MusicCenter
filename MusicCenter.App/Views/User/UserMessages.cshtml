@model List<MusicCenter.Common.ViewModels.Message.MessageLisItemViewModel>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="row" >
    <div class="col-md-2">
        Author
    </div>
    <div class="col-md-2">
        Sent date
    </div>
    <div class="col-md-2">
        Title
    </div>
    <div class="col-md-2">
        Message
    </div>
</div>

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        if (!item.IsReaded)
        {
            <div class="row" style="background:lightblue">
                <div class="col-md-2">
                    @item.Author
                </div>
                <div class="col-md-2">
                    @item.SentDate
                </div>
                <div class="col-md-2">
                    @item.Title
                </div>
                <div class="col-md-2">
                    @item.Content.Substring(0, 50) ...
                </div>
                <div class="col-md-2">
                    @if (item.IsReaded)
                    {<label>Yes</label>}
                    else
                    {<label>No</label>}
                </div>
                <div class="col-md-2">
                    <a class="btn btn-default pull-right" href="@Url.Action("MessageReply", "User")" role="button">Reply</a>
                </div>
            </div>
        }
        else
        {
            <div class="row">
            <div class="col-md-2">
                @item.Author
            </div>
            <div class="col-md-2">
                @item.SentDate
            </div>
            <div class="col-md-2">
                @item.Title
            </div>
            <div class="col-md-2">
                @item.Content.Substring(0, 50) ...
            </div>
            <div class="col-md-2">
                @if(item.IsReaded){<label>Yes</label>}else{<label>No</label>}
            </div>
            <div class="col-md-2">
                <a class="btn btn-default pull-right" href="@Url.Action("MessageReply", "User")" role="button">Reply</a>
            </div>
            </div>
        } 

    }
}
else
{
     <h1><small>No messages...</small></h1>
}

